<p id="notice"><%= notice %></p>

<h4 class='d-flex justify-content-between'>
<span>Notebooks</span>
  <%= link_to 'New Notebook', new_notebook_path, class: 'btn btn-primary' %>
</h4>

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notebooks.each do |notebook| %>
      <tr>
        <td><%= link_to notebook.title, notebook %></td>
        <td><%= link_to 'Edit', edit_notebook_path(notebook) %></td>
        <td><%= link_to 'Destroy', notebook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


